{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "removeComments": true,
    "declaration": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "outDir": "lib"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "src/*.spec.ts"]
}
